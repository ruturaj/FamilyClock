<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.themeinnov8.code.familyclock.NameActivity">

    <TextView android:text="Just one step..." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvABC"
        android:layout_marginTop="50dip"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:paddingBottom="20dp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvABC">

        <TableRow android:layout_marginTop="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:text="Your Name :"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="5dip" ></TextView>

        </TableRow>

        <TableRow android:layout_marginTop="20dip" >

            <EditText
                android:id="@+id/username"
                android:text="Shruti"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:layout_weight="1" >

            </EditText>

        </TableRow>

        <TableRow android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/btnSubmit"
                android:layout_marginLeft="100dip"
                android:layout_marginTop="30dip"
                android:text="Submit"
                android:layout_width="150dip" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
