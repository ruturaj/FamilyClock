<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RegistrationActivity"
    style="@style/TextAppearance.AppCompat.Headline">

    <TextView android:text="Weasley Clock" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAppName"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textColor="@color/Blue"
        android:paddingBottom="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Registration" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegistration"
        android:textStyle="bold|italic"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:paddingBottom="20dp"
        android:layout_below="@+id/tvAppName" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvRegistration">

        <TableRow android:layout_marginTop="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:text="Your Name :"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dip"
                ></TextView>

            <EditText
                android:id="@+id/username"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1" >

            </EditText>

        </TableRow>

        <TableRow android:layout_marginTop="20dip" >

            <TextView android:text="Phone Number :"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"></TextView>

            <EditText
                android:id="@+id/phnumber"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1" >

            </EditText>

        </TableRow>

        <TableRow android:gravity="center" android:layout_marginTop="20dip" >

            <Button
                android:text="Register"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register"
                android:layout_span="2" ></Button>
        </TableRow>

    </TableLayout>

</RelativeLayout>
