<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.themeinnov8.code.familyclock.SALTConfirmationActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" >

        <TableRow android:layout_marginTop="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:text="Confirm your Registration"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5dip" ></TextView>

        </TableRow>

        <TableRow android:layout_marginTop="40dip" >

            <TextView
                android:layout_width="wrap_content"
                android:text="Enter Confirmation Code :"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="5dip" ></TextView>

        </TableRow>

        <TableRow android:layout_marginTop="20dip" >

            <EditText
                android:id="@+id/edittextsalt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1" >

            </EditText>

        </TableRow>

        <TableRow android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/btnConfirm"
                android:layout_marginTop="30dip"
                android:layout_marginLeft="80dip"
                android:text="Confirm"
                android:layout_width="wrap_content"
                android:layout_span="2" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
